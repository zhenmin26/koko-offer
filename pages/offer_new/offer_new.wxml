<!--pages/record_new/record_new.wxml-->
<!-- header bar -->
<view>
  <header headerIcon="home" headerText="New record"></header>
</view>
<view class="top"></view>

<view class="outer_section">
  <view class="section">
    <view class="section__title">Please choose offer type</view>
    <picker bindchange="pickerOfOfferType" value="{{indexOfOfferType}}" range="{{offerType}}">
      <view class="picker">
        <text class="picker_text">Your choice：</text>{{offerType[indexOfOfferType]}}
      </view>
    </picker>
  </view>
</view>


<block wx:if="{{true}}">
  <block wx:if="{{indexOfOfferType == 1}}">
    <view class="outer_section">
      <view class="section">
        <view class="section__title">Job position</view>
        <picker mode="multiSelector" bindchange="bindMultiPickerChangeOfJob" bindcolumnchange="bindMultiPickerColumnChangeOfJob" value="{{multiIndexOfJob}}" range="{{multiArrayOfJob}}">
          <view class="picker">
            Your choice：
            <text>{{multiArrayOfJob[0][multiIndexOfJob[0]]}} {{multiArrayOfJob[1][multiIndexOfJob[1]]}}</text>
          </view>
        </picker>
      </view>
    </view>
  </block>

  <block wx:elif="{{indexOfOfferType == 2}}">
    <view class="outer_section">
      <view class="section">
        <view class="section__title">Internship position</view>
        <picker mode="multiSelector" bindchange="bindMultiPickerChangeOfInternship" bindcolumnchange="bindMultiPickerColumnChangeOfInternship" value="{{multiIndexOfInternship}}" range="{{multiArrayOfInternship}}">
          <view class="picker">
            <view>Your choice: {{multiArrayOfInternship[0][multiIndexOfInternship[0]]}} {{multiArrayOfInternship[1][multiIndexOfInternship[1]]}}</view>
          </view>
        </picker>
      </view>
    </view>
    <view class="outer_section">
      <view class="section">
        <view class="section__title">Internship type</view>
        <picker bindchange="bindPickerChangeOfInternshipType" value="{{indexOfInternshipType}}" range="{{arrayOfInternshipType}}">
          <view class="picker">
            Your choice：{{arrayOfInternshipType[indexOfInternshipType]}}
          </view>
        </picker>
      </view>
    </view>
  </block>

  <block wx:elif="{{indexOfOfferType == 3}}">
    <view class="outer_section">
      <view class="section">
        <view class="section__title">Program type</view>
        <picker bindchange="pickerOfStudyType" value="{{indexOfStudyType}}" range="{{studyType}}">
          <view class="picker">
            Your choice：{{studyType[indexOfStudyType]}}
          </view>
        </picker>
      </view>
    </view>
    <view class="outer_section">
      <view class="section">
        <view class="section__title">Program</view>
        <picker mode="multiSelector" bindchange="bindMultiPickerChangeOfStudy" bindcolumnchange="bindMultiPickerColumnChangeOfStudy" value="{{multiIndexOfStudy}}" range="{{multiArrayOfStudy}}">
          <view class="picker">
            Your choice：
            <text>{{multiArrayOfStudy[0][multiIndexOfStudy[0]]}} {{multiArrayOfStudy[1][multiIndexOfStudy[1]]}}</text>
          </view>
        </picker>
      </view>
    </view>
  </block>

  <block wx:else>
    <view class="tip_text">Choose offer type first</view>
  </block>
</block>
<!-- status -->
  <block wx:if="{{indexOfOfferType != 0}}">
    <view class="outer_section">
      <view class="section">
        <view class="section__title">Status</view>
        <picker bindchange="bindPickerChangeOfStatus" value="{{indexOfStatus}}" range="{{status}}">
          <view class="picker">
            Your choice：{{status[indexOfStatus]}}
          </view>
        </picker>
      </view>
    </view>
    <!-- time -->
    <view class="outer_section">
      <view class="section">
        <view class="section__title">Update time</view>
        <picker mode="date" value="{{date}}" start="2015-09-01" end="2099-09-01" bindchange="bindDateChange">
          <view class="picker">
            Your choice: {{create_time}}
          </view>
        </picker>
      </view>
    </view>

    <button bindtap="addOffer" class="button">submit</button>
  </block>
