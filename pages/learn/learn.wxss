/* pages/learn/learn.wxss */
/* learn area */
.intro{
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-top: 10rpx;
  color: gray;
}

.learn_box1{
  height: 200rpx;
  box-sizing: border-box;
  padding: 10rpx 15rpx;
}

.learn_inbox1{
  height: 180rpx;
  box-sizing: border-box;
  border: solid 3px rgba(12, 122, 21, 0.5);
  /* border: solid 3px rgba(235, 197, 69, 1); */
  border-radius: 5px;
}

.learn_inbox1_top{
  padding-left: 20rpx;
  padding-top: 15rpx;
  height: 85rpx;
  font-size: 40rpx;
  color: white;
  font-weight: 550;
  font-family: Arial, Helvetica, sans-serif;
}

.learn_inbox1_intop{
  height: 80rpx;
  width: 255rpx;
  border-radius: 5px;
  background-color: #7AAF49;
  box-sizing: border-box;
  padding-top: 10rpx;
  padding-left: 46rpx;
}

.learn_inbox1_bottom{
  height: 85rpx;
  padding-top: 10rpx;
  padding-left: 20rpx;
  font-size: 40rpx;
  font-weight: bold;
  font-family: Arial, Helvetica, sans-serif;
}

.learn_box2{
  height: 100rpx;
  padding: 15rpx 0rpx 0rpx 0rpx;
}

.learn_inbox2{
  height: 95rpx;
  box-sizing: border-box;
  border-bottom: solid 3px rgb(245,245,245,1);
  border-radius: 2px;
  padding-left: 15rpx;
}

.learn_inbox2_icon{
  width: 80rpx;
  box-sizing: border-box;
  padding: 12.5rpx;
  float: left;
}

.learn_inbox2_icon_pic{
  width: 55rpx;
  height: 55rpx;
}

.learn_inbox2_text{
  width: 500rpx;
  height: 80rpx;
  box-sizing: border-box;
  padding-top: 18rpx;
  padding-left: 3rpx;
  float: left;
  font-family: Arial, Helvetica, sans-serif;
  word-spacing: -0.8px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: rgb(81,81,81);
  /* color: gray; */
}

.learn_inbox2_enter{
  width: 50rpx;
  height: 80rpx;
  box-sizing: border-box;
  padding: 25rpx 10rpx 25rpx 10rpx;
  float: right;
}

.learn_inbox2_enter_pic{
  width: 30rpx;
  height: 30rpx;
  float: right;
}