<!--pages/home/home.wxml-->
<!-- header bar -->
<view>
  <header headerIcon="home" headerText="Your Offer Record"></header>
</view>

<!-- add new content -->

<view class="add_area">
  <navigator url="/pages/record_add/record_add?id=101">
    <view class="add_icon">
      <image class="add_icon" src="/images/home/add.png"></image>
    </view>
  </navigator>
  <view class="add_description">
    new record
  </view>
</view>

<!-- Content area -->
<view>
  <!-- list all content -->
  <view class="content_area">
    <block wx:for="{{records}}" wx:key="index">
      <!-- icon -->
      <view class="content_icon">
        <image class="content_icon_pic" src="/images/home/content_icon{{item.id}}.png"></image>
      </view>
      <!-- body -->
      <view class="content_body">
        <view class="content_title">
          <view class="content_title_name">Title</view>
          <view class="content_title_box">
            <view class="content_title_inbox">{{item.title}}</view>
          </view>
        </view>
        <view class="content_status">
          <view class="content_status_name">Status</view>
          <view class="content_status_box">
            <view class="content_status_inbox">{{item.status}}</view>
          </view>
        </view>
      </view>
      <!-- more -->
      <navigator url="/pages/record_more/record_more?id=101">
        <view class="content_more">
          <image class="content_more_pic" src="/images/home/more.png"></image>
        </view>
      </navigator>
    </block>
  </view>
</view>

<block wx:for="{{array}}" wx:key="index">
  <navigator url="/pages/test/test?id={{item.id}}">
    <view style="border: solid 2px black;">
      <view> {{item.title}} </view>
      <view> {{item.num}} </view>
    </view>
  </navigator>
</block>

